{
  "name": "@microsoft/teams-js",
  "author": "Microsoft Teams",
  "version": "1.9.0",
  "description": "Microsoft Client SDK for building app for Microsoft teams",
  "main": "./dist/MicrosoftTeams.min.js",
  "typings": "./dist/MicrosoftTeams.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/OfficeDev/microsoft-teams-library-js"
  },
  "scripts": {
    "build": "yarn lint && webpack",
    "lint": "eslint ./src/**/*.ts",
    "doctor": "yarn lint --fix",
    "prettier": "prettier --write '**/*.{ts,js,css,html}'",
    "test": "jest"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "azure-keyvault": "^3.0.5",
    "del": "6.0.0",
    "deploy-azure-cdn": "^2.1.0",
    "dts-builder": "^1.1.7",
    "dts-bundle": "^0.7.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "fs-jetpack": "^4.1.0",
    "jest": "^26.6.3",
    "merge2": "1.4.1",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "ts-loader": "^8.0.17",
    "tslint": "^6.1.3",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^4.1.5",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "yargs": "^16.2.0"
  },
  "files": [
    "dist/**",
    "dts/**",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
  }
}
