{
  "name": "teamsjs-app-sdk-monorepo",
  "private": true,
  "author": "Microsoft teamsjs",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/OfficeDev/teamsjs-app-sdk"
  },
  "scripts": {
    "auth": "yarn global add vsts-npm-auth --registry https://registry.npmjs.com --always-auth false && vsts-npm-auth -config .npmrc",
    "build": "lerna run build --stream",
    "build:clean": "yarn clean && yarn build",
    "bundleAnalyze": "yarn workspace @microsoft/bundle-analysis-app webpack:profile",
    "bundleAnalyze:collect": "yarn bundleAnalyze && node tools/cli/collectBundleAnalysis.js --folderName bundleAnalysis",
    "clean": "lerna run clean --stream",
    "clean:full": "yarn clean && yarn clean:modules",
    "clean:modules": "lerna clean -y && if exist node_modules (rd /s /q node_modules)",
    "efb": "lerna run eslint-fix-build",
    "publish-sdk": "yarn publish packages/teamsjs-app-sdk",
    "start-perf-app": "yarn workspace teamsjs-perf-test-app start",
    "start-test-app": "yarn workspace teamsjs-test-app start",
    "test": "lerna run test --stream"
  },
  "devDependencies": {
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fs-extra": "^9.1.0",
    "lerna": "^3.22.1",
    "rimraf": "^3.0.2"
  },
  "resolutions": {
    "dns-packet": "^1.3.2",
    "glob-parent": "^5.1.2",
    "lodash": "^4.17.21",
    "merge": "^2.1.1",
    "serialize-javascript": "^3.1.0",
    "set-value": "^2.0.1",
    "underscore": "1.12.1",
    "url-parse": "^1.5.0",
    "y18n": "^4.0.1"
  }
}
