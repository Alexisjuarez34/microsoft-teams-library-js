{
  "name": "@microsoft/teamsjs-app-sdk",
  "author": "Microsoft teamsjs",
  "version": "0.1.0",
  "description": "teamsjs App SDK for building teamsjs apps",
  "main": "./dist/teamsjs.min.js",
  "typings": "./dist/teamsjs.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/OfficeDev/teamsjs-app-sdk"
  },
  "scripts": {
    "build": "yarn lint && webpack",
    "clean": "rimraf ./dist",
    "doctor": "yarn lint --fix",
    "lint": "eslint ./src/**/*.ts",
    "prettier": "prettier --write '**/*.{ts,js,css,html}'",
    "test": "jest"
  },
  "license": "MIT",
  "files": [
    "dist/**",
    "dts/**",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "testRunner": "jest-jasmine2",
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ]
 },
  "dependencies": {
    "es6-promise": "^4.2.8"
  }
}
