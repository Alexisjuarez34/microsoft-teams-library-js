{
    "capabilityName": "geoLocation2",
    "comment": "Namespace to interact with the geoLocation module-specific part of the SDK. This is the newer version of location module.",
    "beta": true,
    "requiresDevicePermissions": true,
    "exportedInterfaces": [
        {
            "name": "Location",
            "comment": "Data struture to represent the location information",
            "members": [
                {
                    "name": "latitude",
                    "type": "number",
                    "comment": "Latitude of the location"
                },
                {
                    "name": "longitude",
                    "type": "number",
                    "comment": "Longitude of the location"
                },
                {
                    "name": "accuracy",
                    "type": "number",
                    "comment": "Accuracy describes the maximum distance in meters from the captured coordinates to the possible actual location",
                    "optional": true,
                    "remark": "This property is only in scope for mobile"
                },
                {
                    "name": "timestamp",
                    "type": "number",
                    "optional": true,
                    "comment": "Time stamp when the location was captured"
                }
            ]
        }
    ],
    "exportedReturnFunctions": [
        {
            "name": "getCurrentLocation",
            "returns": "Location",
            "returnComment": "A promise that resolves with the location of the user",
            "limitedToFrameContexts": [{"frameContext":"content"}, {"frameContext": "task"}],
            "requiredParameters": [
                {
                    "name": "foo",
                    "objectType": {
                        "typeName": "Location"
                    },
                    "comment": "Bar!"
                }
            ],
            "dataForHost": [{"basic": 1}, {"string": "hello"}, {"basic": "true"}, {"reference": "foo"}],
            "dataFromHost": [
                {
                    "name": "wasSuccessful",
                    "successCheck": true,
                    "errorMessage": "Call failed on host with generic error, please read our docs for more info"
                },
                {
                    "name": "err",
                    "sdkError": true
                },
                {
                    "name": "location",
                    "type": "Location",
                    "requiredForSuccess": true,
                    "errorMessage": "No location received from host",
                    "returnValue": true
                }
            ]
        }
    ]
}